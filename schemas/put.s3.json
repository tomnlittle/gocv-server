{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"functions": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/function"
			}
		},
		"encoding": {
			"type": "string"
		},
		"quality": {
			"type": "integer",
			"minimum": 0,
			"maximum": 100
		}
	},
	"required": [
		"encoding"
	],
	"definitions": {
		"function": {
			"type": "object",
			"properties": {
				"function": {
					"type": "string",
                    "enum": ["resize", "clahe"]
				},
				"parameters": {
					"type": "object",
					"allOf": [{
						"if": { "properties": { "functionID": { "const" :"resize"}} },
						"then": {
							"properties": {
								 "width": { "type": "integer"},
								 "height": { "type": "integer"}
							}

						}
					  },
					  {
						"if": { "properties": { "functionID": { "const" :"clahe"}} },
						"then": {
							"properties": {
								 "clip": { "type": "number"},
								 "gridSize": { "type": "integer"}
							}
						}
					  }
					]
				}
            },
			"required": [
				"function",
				"parameters"
			]
		}
	}
}
